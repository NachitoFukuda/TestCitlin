{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "typeRoots": [
      "declarations",
      "src/types",
      "node_modules/@types"
    ],
    "module": "esnext",
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "images.d.ts"
  ]
}
